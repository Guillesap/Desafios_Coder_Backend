<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Lista de Películas</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Título</th>
            <th>Precio</th>
            <th>Portada</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img src="{{this.thumbnail}}" width="50px"></td>
        </tr>
        {{/each}}
    </table>
</div>
{{ else }}
<h3 class="alert alert-warning">No hay películas</h3>
{{/if}}